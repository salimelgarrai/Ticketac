<!DOCTYPE html>
<html>
<head>
  <title>Ticketac</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
</head>
<body>


<div class="page-container position-relative" style="min-height: 100vh">
  <%- include('navbar-login') %>
  <div class="container container-fluid d-flex flex-column align-items-center pb-5">
    <div class="row pt-5 pb-5 mt-5 mt-5">
    <div class="col-12 col-lg-6 mb-3 p-4">
      <form class="d-flex flex-column justify-content-center align-items-center" action="/users/sign-in" method="post">
        <h5 class="text-white">Connexion :</h5>
      <input class="form-control m-2" type="text" value="marin.lebrec@outlook.fr" placeholder="Email" name="email" required>
      <input class="form-control m-2" type="password" value="oui" placeholder="Password" name="password" required>
      <input type="submit" class="btn btn-danger mt-2" value="Confirm">
      </form>
    </div>
    <div class="col-12 col-lg-6 mb-3 p-4">
      <form class="d-flex flex-column justify-content-center align-items-center" action="/users/sign-up" method="post">
        <h5 class="text-white">Inscription :</h5>
      <input class="form-control m-2" type="text" placeholder="First Name" name="firstName" required>
      <input class="form-control m-2" type="text" placeholder="Last Name" name="name" required>
      <input class="form-control m-2" type="email" placeholder="Email" name="email" required>
      <input class="form-control m-2" type="password" placeholder="Password" name="password" required>
      <input type="submit" class="btn btn-danger mt-2" value="Confirm">
    </form>
    </div>
    </div>
    <% if (message != undefined){  %>
        <div class="row"><p class="text-danger"><%= message %></p></div>
        <% } %> 
  </div>
  <%- include('footer') %>
</div>



  <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
</body>
</html>
