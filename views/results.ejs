<!DOCTYPE html>
<html>
<head>
  <title>Ticketac</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
</head>
<body>


<div class="page-container position-relative" style="min-height: 100vh">
  <%- include('navbar') %>
  <div class="container container-fluid d-flex flex-column align-items-center pb-5">
    <div class="row pt-5 pb-5 mt-5 mt-5">
        <% if(journeys.length > 0){ %>
          <h5 class="text-white pb-3">Tickets available on <%= parseDate(journeys[0].date) %> :</h5>
        <%  journeys.map( journey => { %>

          <div class="card d-flex m-2">
            <div class="card-body d-flex justify-content-between align-items-center">
               <div class="m-1 fw-bold"><%= journey.departure %> / <%= journey.arrival %></div>
               <div class="m-1">départ du train à: <%= journey.departureTime %>h</div>
               <div class="m-1 fw-bold"><%= journey.price %> € <a href="/basket"  class="btn btn-danger m-2">OK</a></div>
            </div>
          </div>

        <%  }) %>



        <% } else { %>
          <div class="d-flex flex-column align-items-center">

           <h3 class="text-white">Oops! No trains available...</h3 class="">
             <a href="/home"  class="btn btn-danger m-2">Home</a>
           </div>

        <% } %>
    </div>
  </div>
  <%- include('footer') %>
</div>



  <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
</body>
</html>
